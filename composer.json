{
    "name": "erickmerchant/wright",
    "description": "a static site generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Erick Merchant",
            "email": "erickmerchant@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5",
        "aura/cli": "2.*",
        "imagine/imagine": "~0.5",
        "jbroadway/urlify": "~1.0",
        "league/flysystem": "~0.2",
        "symfony/yaml": "~2.3",
        "twig/twig": "~1.14"
    },
    "suggest": {
        "michelf/php-markdown": "If you use Wright\\Converter\\MarkdownConverter",
        "michelf/php-smartypants": "If you use Wright\\Converter\\MarkdownConverter",
        "erusev/parsedown": "If you use Wright\\Converter\\ParsedownConverter"
    },
    "bin": ["bin/wright"],
    "autoload": {
        "psr-4": {
            "Wright\\": "src/",
            "Wright\\Test\\": "test/"
        }
    }
}
